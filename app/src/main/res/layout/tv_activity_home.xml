<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    android:gravity="center_horizontal"
    android:background="?attr/colorSurface">

    <TextView
        android:id="@+id/tv_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceHeadline4"
        android:text="AdAway"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:id="@+id/tv_state_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBody1"
        android:layout_marginBottom="32dp"
        tools:text="Status: Idle"/>

    <Button
        android:id="@+id/btn_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toggle AdBlocking"
        android:padding="16dp"
        android:focusable="true"
        android:nextFocusDown="@id/btn_update"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:focusable="true"
            android:nextFocusRight="@id/btn_sync"
            android:nextFocusUp="@id/btn_toggle"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/btn_sync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sync"
            android:focusable="true"
            android:nextFocusLeft="@id/btn_update"
            android:nextFocusUp="@id/btn_toggle"
            android:nextFocusDown="@id/btn_dns_monitor"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_dns_monitor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DNS Monitor"
        android:focusable="true"
        android:nextFocusUp="@id/btn_update"
        android:nextFocusDown="@id/btn_sources"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btn_sources"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hosts_title"
        android:focusable="true"
        android:nextFocusUp="@id/btn_dns_monitor"
        android:nextFocusDown="@id/btn_support_dev"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btn_support_dev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Support Dev"
        android:focusable="true"
        android:nextFocusUp="@id/btn_sources"
        android:layout_marginTop="16dp"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:visibility="gone"/>

</LinearLayout>
